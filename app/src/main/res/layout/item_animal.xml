<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:backgroundTint="#2C2C2C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- IMAGEN DEL ANIMAL -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/img_animal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <!-- BADGE DE NUEVA ACTUALIZACIÓN -->
            <TextView
                android:id="@+id/badge_nuevo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nueva actualización"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/badge_rounded"
                android:backgroundTint="#2196F3"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_margin="12dp"
                android:visibility="gone" />

            <!-- BOTÓN DE OPCIONES -->
            <ImageView
                android:id="@+id/btn_opciones"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_more"
                android:tint="#FFFFFF"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:padding="8dp"
                android:background="@drawable/badge_circle"
                android:backgroundTint="#80000000" />
        </FrameLayout>

        <!-- INFO DEL ANIMAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txt_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txt_especie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especie"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
